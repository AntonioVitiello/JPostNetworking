<resources>
    <!-- Blue Base application theme. -->
    <style name="AppThemeBlue" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/bluePrimary</item>
        <item name="colorPrimaryDark">@color/bluePrimaryDark</item>
        <item name="colorAccent">@color/blueAccent</item>
        <item name="android:textColor">@color/bluePrimaryText</item>
    </style>

    <!-- Red Base application theme. -->
    <style name="AppThemeRed" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/redPrimary</item>
        <item name="colorPrimaryDark">@color/redPrimaryDark</item>
        <item name="colorAccent">@color/redAccent</item>
        <item name="android:textColor">@color/redPrimaryText</item>
    </style>

    <!-- Yellow Base application theme. -->
    <style name="AppThemeYellow" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/yellowPrimary</item>
        <item name="colorPrimaryDark">@color/yellowPrimaryDark</item>
        <item name="colorAccent">@color/yellowAccent</item>
        <item name="android:textColor">@color/yellowPrimaryText</item>
    </style>

    <!-- Green Base application theme. -->
    <style name="AppThemeGreen" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/greenPrimary</item>
        <item name="colorPrimaryDark">@color/greenPrimaryDark</item>
        <item name="colorAccent">@color/greenAccent</item>
        <item name="android:textColor">@color/greenPrimaryText</item>
    </style>


    <style name="labelFormat">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">14sp</item>
        <item name="android:minWidth">60sp</item>
    </style>

    <style name="valueFormat">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginLeft">10dp</item>
    </style>

    <style name="layoutFormat">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:padding">5dp</item>
    </style>
</resources>
